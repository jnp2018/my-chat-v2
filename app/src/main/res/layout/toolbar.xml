<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">


    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/image_avatar"
            android:layout_width="@dimen/_36dp"
            android:layout_height="@dimen/_36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_18dp"
            android:layout_toRightOf="@id/image_avatar"
            android:text="@string/chat"
            android:textSize="@dimen/_22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_one"
            android:layout_width="@dimen/_34dp"
            android:layout_height="@dimen/_34dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_18dp"
            android:layout_toLeftOf="@id/image_two"
            android:background="@drawable/shape_oval_gray"
            android:padding="@dimen/_7dp" />

        <ImageView
            android:id="@+id/image_two"
            android:layout_width="@dimen/_34dp"
            android:layout_height="@dimen/_34dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_18dp"
            android:background="@drawable/shape_oval_gray"
            android:padding="@dimen/_7dp" />

    </RelativeLayout>

</android.support.v7.widget.Toolbar>