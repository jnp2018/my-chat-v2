<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_avatar"
        style="@style/SearchImageItemAvatar" />


    <ImageView
        android:id="@+id/image_online"
        android:layout_width="@dimen/message_image_online_size"
        android:layout_height="@dimen/message_image_online_size"
        android:layout_alignRight="@id/image_avatar"
        android:layout_alignBottom="@id/image_avatar"
        android:background="@drawable/shape_oval_border_green" />

    <TextView
        android:id="@+id/text_name"
        style="@style/TextTitle"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/image_avatar"
        android:textSize="@dimen/text_input"
        tools:text="Vũ Hạnh" />

</RelativeLayout>