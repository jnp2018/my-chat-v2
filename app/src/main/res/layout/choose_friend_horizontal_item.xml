<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginTop="@dimen/_9dp"
    android:layout_margin="@dimen/_5_5dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_avatar"
        android:layout_width="@dimen/chat_image_avatar_size"
        android:layout_height="@dimen/chat_image_avatar_size" />

    <ImageView
        android:id="@+id/image_cancel"
        android:src="@drawable/ic_close"
        android:tint="@color/black"
        android:layout_alignRight="@id/image_avatar"
        android:layout_alignTop="@id/image_avatar"
        android:background="@drawable/round_corner_white"
        android:padding="@dimen/_3dp"
        android:layout_width="@dimen/_18dp"
        android:layout_height="@dimen/_18dp" />

    <TextView
        android:id="@+id/text_name"
        android:text="Hanh"
        android:textStyle="normal"
        android:textSize="@dimen/_13dp"
        android:layout_below="@id/image_avatar"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>