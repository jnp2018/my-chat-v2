<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/window_margin"
    android:layout_marginRight="@dimen/window_margin"
    android:gravity="center_horizontal"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_messenger"
        android:layout_marginTop="@dimen/_70dp"
        android:layout_marginBottom="@dimen/_100dp"
        android:layout_width="@dimen/login_image_messenger"
        android:layout_height="@dimen/login_image_messenger"/>

    <EditText
        android:id="@+id/input_email"
        style="@style/EditText"
        android:layout_marginTop="@dimen/window_margin"
        android:layout_marginBottom="@dimen/window_margin"
        android:hint="@string/email" />

    <View
        android:id="@+id/view_line"
        style="@style/Line"
        android:layout_marginBottom="@dimen/window_margin" />

    <EditText
        android:id="@+id/input_password"
        style="@style/EditText"
        android:layout_marginBottom="@dimen/window_margin"
        android:hint="@string/mat_khau"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/button_login"
        style="@style/ButtonMain"
        android:layout_marginTop="@dimen/login_margin"
        android:layout_marginBottom="@dimen/login_margin"
        android:background="@drawable/round_corner_gray_16"
        android:text="@string/dang_nhap"
        android:textColor="@color/black20" />


    <Button
        android:id="@+id/button_creat_account"
        style="@style/ButtonMain"
        android:layout_marginBottom="@dimen/login_margin"
        android:background="@drawable/round_corner_green"
        android:text="@string/tao_tai_khoan" />

    <LinearLayout
        android:id="@+id/layout_linean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/login_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/button_facebook"
            android:layout_width="@dimen/login_image_social_size"
            android:layout_height="@dimen/login_image_social_size"
            android:layout_marginRight="@dimen/_9dp"
            android:background="@drawable/round_border_gray"
            android:padding="@dimen/login_image_social_padding"
            android:src="@drawable/ic_facebook" />

        <ImageView
            android:id="@+id/button_google"
            android:layout_width="@dimen/login_image_social_size"
            android:layout_height="@dimen/login_image_social_size"
            android:layout_marginLeft="@dimen/_9dp"
            android:background="@drawable/round_border_gray"
            android:padding="@dimen/login_image_social_padding"
            android:src="@drawable/ic_google" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_forget_password"
        style="@style/TextTitle"
        android:layout_marginBottom="@dimen/login_margin"
        android:text="@string/quen_mat_khau"
        android:textAllCaps="true"
        android:textSize="@dimen/text_min" />

</LinearLayout>