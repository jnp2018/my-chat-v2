<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView

        android:id="@+id/image_avatar_serach"
        android:layout_width="@dimen/message_image_avatar_size"
        android:layout_height="@dimen/message_image_avatar_size"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/_15dp"
        android:padding="@dimen/_3dp" />


    <ImageView
        android:id="@+id/image_online"
        android:layout_width="@dimen/message_image_online_size"
        android:layout_height="@dimen/message_image_online_size"
        android:layout_alignRight="@+id/image_avatar_serach"
        android:layout_alignBottom="@+id/image_avatar_serach"
        android:background="@drawable/shape_oval_border_green" />


    <TextView
        android:id="@+id/text_name_user"
        style="@style/TextTitle"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/margin_primary"
        android:layout_toRightOf="@+id/image_avatar_serach"
        android:fontFamily="sans-serif-medium"
        android:text="Vũ Hạnh"
        android:textSize="@dimen/text_input" />

</RelativeLayout>