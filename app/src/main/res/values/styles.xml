<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/gray</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@color/black87</item>
        <item name="colorControlNormal">@color/blue</item>
    </style>

    <style name="TextTitle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="ButtonMain">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:paddingTop">@dimen/margin_primary</item>
        <item name="android:paddingBottom">@dimen/margin_primary</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@color/black40</item>
    </style>

    <style name="Switch" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/green</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="ToolbarMenuItem">
        <item name="android:layout_width">@dimen/toolbar_image_item_size</item>
        <item name="android:layout_height">@dimen/toolbar_image_item_size</item>
        <item name="android:layout_marginRight">@dimen/margin_primary</item>
        <item name="android:background">@drawable/shape_oval_gray</item>
        <item name="android:foreground">@drawable/ripple_effect</item>
        <item name="android:padding">@dimen/toolbar_image_item_padding</item>
        <item name="android:visibility">invisible</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="Toolbar">
        <item name="android:elevation">@dimen/toolbar_shadow</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>
    
    <style name="ProfileImageItem">
        <item name="android:foreground">@drawable/ripple_effect</item>
        <item name="android:layout_width">@dimen/profile_image_item_size</item>
        <item name="android:layout_height">@dimen/profile_image_item_size</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/shape_oval_gray</item>
        <item name="android:layout_marginBottom">@dimen/_8dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ImageOnline">
        <item name="android:layout_width">@dimen/chat_image_online_size</item>
        <item name="android:layout_height">@dimen/chat_image_online_size</item>
        <item name="android:background">@drawable/shape_oval_border_green</item>
    </style>


    <style name="MessengerImageItem">
        <item name="android:layout_height">@dimen/message_image_item_size</item>
        <item name="android:layout_width">@dimen/message_image_item_size</item>
        <item name="android:layout_centerInParent">true</item>
    </style>


    <style name="MessengerRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_1dp</item>
        <item name="android:layout_margin">@dimen/_5dp</item>
        <item name="android:background">@color/black</item>
    </style>



</resources>
