<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>
    
    <style name="ToolbarMenuItem">
        <item name="android:layout_width">@dimen/toolbar_image_item_size</item>
        <item name="android:layout_height">@dimen/toolbar_image_item_size</item>
        <item name="android:layout_marginRight">@dimen/window_margin</item>
        <item name="android:background">@drawable/shape_oval_gray</item>
        <item name="android:padding">@dimen/toolbar_image_item_padding</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
