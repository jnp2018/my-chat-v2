<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@color/black87</item>
    </style>

    <style name="TextTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="TextHeadline1" parent="TextTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_headline_1</item>
    </style>

    <style name="TextHeadline2" parent="TextTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_headline_2</item>
    </style>

    <style name="TextBody" parent="TextTitle">
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="TextMin" parent="TextTitle">
        <item name="android:textSize">@dimen/text_min</item>
    </style>

    <style name="ButtonMain">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="ToolbarMenuItem">
        <item name="android:layout_width">@dimen/toolbar_image_item_size</item>
        <item name="android:layout_height">@dimen/toolbar_image_item_size</item>
        <item name="android:layout_marginRight">@dimen/window_margin</item>
        <item name="android:background">@drawable/shape_oval_gray</item>
        <item name="android:padding">@dimen/toolbar_image_item_padding</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ProfileImageItem">
        <item name="android:layout_width">@dimen/profile_image_item_size</item>
        <item name="android:layout_height">@dimen/profile_image_item_size</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/round_corner_gray</item>
        <item name="android:layout_marginBottom">@dimen/_8dp</item>
    </style>

</resources>
